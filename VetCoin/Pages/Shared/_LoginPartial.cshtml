@using Microsoft.Extensions.Options
@inject VetCoin.Services.CoreService coreService
@inject Codes.SiteContext SiteContext
@inject Services.StaticSettings StaticSettings
@{
    var loginUrl = coreService.GetLoginPageUrl();
    var userContext = coreService.GetUserContext();
}


<ul class="navbar-nav">
    @if (User.Identity.IsAuthenticated)
    {
        <li class="nav-item">
            <span class="navbar-text text-dark">@User.Identity.Name :@userContext.Amount @StaticSettings.CurrenryUnit</span>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-page="/SignOut">Sign out</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" href="@loginUrl">Sign in</a>
        </li>
    }
</ul>
